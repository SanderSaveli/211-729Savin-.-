
#include <iostream>
#include <math.h>

using namespace std;

int one ()
{
    int N;
    cout << "Введите колличество секунд" << endl;
    cin >> N;
    while (N>=60)
    {
        N -= 60;
    }
    cout << "С последней минуты прошло: " << N << endl;
    return 0;
}

int two()
{
    int N,n;
    cout << "Введите номер дня: " << endl;
    cin >> N;
    if (N<=0 || N>365)
    {
        cout << "Ошибка ввода " << endl;
        return 0;
    }
    n = N % 7;
    switch (n)
    {
    case (0):
        cout << N << " день будет воскресеньем" << endl;
        break;
    case (1):
        cout << N << " день будет понедельником" << endl;
        break;
    case (2):
        cout << N << " день будет вторником" << endl;
        break;
    case (3):
        cout << N << " день будет средой" << endl;
        break;
    case (4):
        cout << N << " день будет четвергом" << endl;
        break;
    case (5):
        cout << N << " день будет пятницой" << endl;
        break;
    case (6):
        cout << N << " день будет субботой" << endl;
        break;
    }
    return 0;
}

int three()
{
    int N, K, n;
    cout << "Введите номер дня: " << endl;
    cin >> K;
    cout << "1 Января было (понедельник- 1, вторник- 2 и т.д): " << endl;
    cin >> N;

    if (K <= 0 || K > 365 || N <= 0 || N > 7)
    {
        cout << "Ошибка ввода " << endl;
        return 0;
    }
    K += N-1;
    n = K % 7;
    switch (n)
    {
    case (0):
        cout << K-N+1 << " день будет воскресеньем" << endl;
        break;
    case (1):
        cout << K - N + 1 << " день будет понедельником" << endl;
        break;
    case (2):
        cout << K - N + 1 << " день будет вторником" << endl;
        break;
    case (3):
        cout << K - N + 1 << " день будет средой" << endl;
        break;
    case (4):
        cout << K - N + 1 << " день будет четвергом" << endl;
        break;
    case (5):
        cout << K - N + 1 << " день будет пятницой" << endl;
        break;
    case (6):
        cout << K - N + 1 << " день будет субботой" << endl;
        break;
    }
    return 0;
}

int four()
{
    int A, B, C,x,y;
    cout << "Введите сторону A прямоугольника: " << endl;
    cin >> A;
    cout << "Введите сторону B прямоугольника: " << endl;
    cin >> B;
    cout << "Введите сторону С квадрата: " << endl;
    cin >> C;
    if (C > A || C > B) 
    {
        cout << "Свободно: " << A * B << "Ни одного квадрата не вместилось" << endl;
        return 0;
    }
    
    x = B / C;
    y = A / C;
    cout << "Свободно: " << (B%C)*A+(A%C)*B-(B%C)*(A%C) << " \nВместилось: " << x * y << endl;
    return 0;
}
int five()
{
    int A;
    cout << "Введите год: " << endl;
    cin >> A;
    cout << "Столетие: " << A/100 + 1 << endl;
    return 0;
}
int main()
{
    setlocale(LC_ALL, "Rus");
    int isContinue = 1;
    int whatToDo = 0;
    do
    {
        cout << "Выберите задание:\n 1) С начала суток прошло N секунд (N — целое). Найти количество секунд, прошедших с начала последней минуты. \n 2) Дни недели пронумерованы следующим образом: 0 — воскресенье, 1 — понедельник, 2 — вторник, . . . , 6 — суббота. Дано целое число K, лежащее в диапазоне 1–365. Определить номер дня недели для K-го дня года, если известно, что в этом году 1 января было понедельником. \n 3) Дни недели пронумерованы следующим образом: 1 — понедельник, 2 — вторник, . . . , 6 — суббота, 7 — воскресенье. Дано целое число K, лежащее в диапазоне 1–365, и целое число N, лежащее в диапазоне 1–7. Определить номер дня недели для K-го дня года, если известно, что в этом году 1 января было днем недели с номером N \n 4) Даны целые положительные числа A, B, C. На прямоугольнике размера A × B размещено максимально возможное количество квадратов со стороной C (без наложений). Найти количество квадратов, размещенных на прямоугольнике, а также площадь незанятой части прямоугольника.  \n 5) Дан номер некоторого года (целое положительное число). Определить соответствующий ему номер столетия, учитывая, что, к примеру, началом 20 столетия был 1901 год \n ";
        cin >> whatToDo;

        switch (whatToDo)
        {
        case (1):
            one();
            break;
        case (2):
            two();
            break;
        case (3):
            three();
            break;
        case (4):
            four();
            break;
        case (5):
            five();
            break;
        default:
            cout << "Ошибка ввода";
            break;
        }

        cout << "Для выхода введите \"0\"\nДля продаджения введите любое число" << endl;
        cin >> isContinue;

    } while (isContinue);
}
